{
  "name": "collabo-web-app-api-server",
  "version": "1.0.0",
  "description": "Collabo web app API server built with @code-collabo node-mongo API boilerplate template - typescript",
  "main": "src/server.atlas.ts",
  "scripts": {
    "dev": "node -r esm node-mongo.js",
    "dev:local": "nodemon --exec ts-node --files src/server.local.ts",
    "dev:atlas": "nodemon --exec ts-node --files src/server.atlas.ts",
    "lint": "esw src --ext .ts --color",
    "lint:watch": "npm run lint -- --watch",
    "dev:restore": "node -r esm node-mongo.js",
    "dev:change": "node -r esm node-mongo.js"
  },
  "author": "Code Collabo",
  "license": "ISC",
  "dependencies": {
    "@code-collabo/node-mongo-scripts": "^1.2.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.5",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "chalk": "^4.1.0",
    "eslint": "^8.39.0",
    "eslint-watch": "^8.0.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
